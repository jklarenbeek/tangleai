{
  "name": "@tangleai/scraper",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "authors": [
    "jklarenbeek"
  ],
  "module": "src/index.ts",
  "publishConfig": {
    "access": "public",
    "module": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
      "dist/*"
    ]
  },
  "scripts": {
    "start": "tsx ./src/index.ts",
    "dev": "npm run dev:tsx",
    "dev:tsx": "tsx watch --conditions=development --clear-screen=false --env-file=./.env --include ./.env ./src/index.ts",
    "build": "npx pkgroll",
    "build:esbuild": "esbuild src/index.ts --define:process.env.NODE_ENV=\\\"production\\\" --bundle --platform=node --outfile=dist/index.js"
  },
  "dependencies": {
    "@types/node": "^22.10.0",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "node-html-markdown": "^1.3.0",
    "pdf-parse": "^1.1.1",
    "playwright-chromium": "^1.49.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/pdf-parse": "^1.1.4",
    "tsx": "^4.19.2"
  }
}