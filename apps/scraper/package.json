{
    "name": "@tangleai/scraper",
    "version": "0.0.1",
    "private": true,
    "license": "MIT",
    "authors": [
        "jklarenbeek"
    ],
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.cts",
    "publishConfig": {
        "access": "public",
        "main": "dist/index.js",
        "typings": "dist/index.d.ts",
        "files": [
            "dist/*"
        ]
    },
    "scripts": {
        "start": "tsx ./index.js",
        "start:dist": "tsx ./dist/index.js",
        "dev": "tsx watch --conditions=development --clear-screen=false --env-file=./.env --include ./.env ./src/index.ts",
        "build": "esbuild ./src/index.ts --bundle --minify --tree-shaking=true --platform=node --format=esm --external:chromium-bidi --banner:\"js=import { createRequire } from 'module'; import path from 'path'; import { fileURLToPath } from 'url'; const __filename = fileURLToPath(import.meta.url); const __dirname = path.dirname(__filename); const require = createRequire(import.meta.url);\" --outfile=dist/index.js",
        "docker:build": "docker build -t jipinx/tangleai-scraper -f ./Dockerfile ../../",
        "docker:push": "docker push jipinx/tangleai-scraper",
        "docker:history": "docker history --human --format \"{{.Size}}: {{.CreatedBy}}\" --no-trunc jipinx/tangleai-scraper",
        "docker:run": "docker run -p 3002:3002 --name tangleai_scraper jipinx/tangleai-scraper"
    },
    "dependencies": {
        "@types/node": "^22.10.0",
        "cheerio": "^1.0.0",
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "node-html-markdown": "^1.3.0",
        "pdf-parse": "^1.1.1",
        "playwright-chromium": "^1.47.2",
        "xxhashjs": "^0.2.2",
        "@tangleai/utils": "*"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/pdf-parse": "^1.1.4",
        "tsx": "^4.19.2",
        "esbuild": "~0.23.0"
    }
}
